{
  "name": "discord-plex-bot",
  "version": "1.0.0",
  "description": "A discord bot that consumes plex webhooks and posts them to discord",
  "main": "index.js",
  "scripts": {
    "dev:build": "tsc -w",
    "dev:start": "nodemon dist/app.js",
    "dev": "concurrently npm:dev:*",
    "start": "node dist/app.js",
    "test": "jest",
    "build:clean": "npx rimraf dist",
    "build:compile": "tsc",
    "build": "npm run build:clean && npm run build:compile",
    "lint:check": "npx eslint .",
    "format:check": "npx prettier .",
    "prepare": "husky install"
  },
  "keywords": [
    "discord",
    "plex",
    "rating",
    "plex-web-hooks",
    "bot"
  ],
  "author": "arlo47",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "discord.js": "^14.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "jest": {
    "testTimeout": 5000,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "*.ts": "npx prettier --write"
    },
    "verbose": true,
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  }
}
